{
  "variables": {
    "base_box_ovf": null
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "source_path": "{{user `base_box_ovf`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "headless": true
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "bootstrap.sh"
    ]
  }],
  "post-processors": ["vagrant"]
}
